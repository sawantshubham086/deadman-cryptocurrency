# Environment Configuration for DEADMAN Cryptocurrency Project

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
HTTP_PORT=3001
WS_PORT=8080

# =============================================================================
# ETHEREUM/EVM NETWORKS CONFIGURATION
# =============================================================================

# Your private key (DO NOT commit to version control!)
# Generate one: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
PRIVATE_KEY=your_private_key_here

# API Keys for blockchain networks
INFURA_API_KEY=your_infura_api_key_here
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Block explorer API keys (optional, for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
BSCSCAN_API_KEY=your_bscscan_api_key_here

# =============================================================================
# TOKEN CONFIGURATION
# =============================================================================
TOKEN_NAME=DEADMAN
TOKEN_SYMBOL=DEAD
INITIAL_SUPPLY=100000000
MAX_SUPPLY=1000000000

# =============================================================================
# STAKING CONFIGURATION
# =============================================================================
DAILY_REWARD_RATE=27    # 0.27% daily
WEEKLY_REWARD_RATE=200  # 2% weekly
MONTHLY_REWARD_RATE=900 # 9% monthly

# =============================================================================
# MINING CONFIGURATION
# =============================================================================
MINING_DIFFICULTY=2
MINING_REWARD=100

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
DEBUG=true

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env in your project root
# 2. Replace 'your_*_here' values with actual keys
# 3. Never commit .env file to version control
# 4. For production, use environment variables instead of .env file